{
  "mcpServers": {
    "@21st-dev/magic": {
      "args": [
        "-y",
        "@21st-dev/magic@latest",
        "API_KEY=\"${_21ST_DEV_API_KEY}\""
      ],
      "command": "npx"
    },
    "antd-components-local": {
      "args": [
        "antd-mcp"
      ],
      "autoApprove": [],
      "command": "npx"
    },
    "browser_tools": {
      "args": [
        "@agentdeskai/browser-tools-mcp@latest"
      ],
      "autoApprove": [],
      "command": "npx"
    },
    "fetch": {
      "args": [
        "mcp-server-fetch"
      ],
      "command": "uvx"
    },
    "figma": {
      "args": [
        "-y",
        "figma-developer-mcp",
        "--figma-api-key=${FIGMA_API_KEY}",
        "--stdio"
      ],
      "autoApprove": [],
      "command": "npx",
      "disabled": true,
      "env": {
        "FIGMA_API_KEY": "${FIGMA_API_KEY}"
      }
    },
    "github": {
      "disabled": false,
      "headers": {
        "Authorization": "Bearer ${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "github.com/AgentDeskAI/browser-tools-mcp": {
      "args": [
        "-y",
        "@agentdeskai/browser-tools-mcp@latest"
      ],
      "autoApprove": [],
      "command": "npx",
      "disabled_tools": []
    },
    "github.com/GLips/Figma-Context-MCP": {
      "args": [
        "-y",
        "figma-developer-mcp",
        "--figma-api-key=${FIGMA_API_KEY}",
        "--stdio"
      ],
      "autoApprove": [],
      "command": "npx"
    },
    "next-devtools": {
      "args": [
        "-y",
        "next-devtools-mcp@latest"
      ],
      "autoApprove": [
        "browser_eval",
        "enable_cache_components",
        "init",
        "nextjs_docs",
        "nextjs_runtime",
        "upgrade_nextjs_16"
      ],
      "command": "npx"
    },
    "nx-mcp": {
      "args": [
        "nx-mcp@latest"
      ],
      "autoApprove": [],
      "command": "npx"
    },
    "shadcn": {
      "args": [
        "shadcn@latest",
        "mcp"
      ],
      "command": "npx"
    },
    "playwright": {
      "args": [
        "@playwright/mcp@latest"
      ],
      "command": "npx"
    }
  },
  "nativeMCPServers": {
    "mcphub": {
      "autoApprove": []
    },
    "neovim": {
      "autoApprove": []
    }
  }
}